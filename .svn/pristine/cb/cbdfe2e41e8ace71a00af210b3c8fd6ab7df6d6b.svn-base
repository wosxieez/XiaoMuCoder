package com.xiaomu.manager
{
	import com.xiaomu.view.actionview.ActionView;
	import com.xiaomu.view.roleview.RoleView;
	import com.xiaomu.view.stageview.StageView;
	
	/**
	 * 脚本组件管理器 
	 * @author coco
	 * 
	 */	
	public class ViewManager
	{
		public function ViewManager()
		{
		}
		
		
		//----------------------------------------------------------------------------------------------------------------
		//
		// Get Instance
		//
		//----------------------------------------------------------------------------------------------------------------
		
		private static var instance:ViewManager;
		
		public static function getInstance():ViewManager
		{
			if (!instance)
				instance = new ViewManager();
			
			return instance;
		}
		
		
		//----------------------------------------------------------------------------------------------------------------
		//
		// Properties
		//
		//----------------------------------------------------------------------------------------------------------------
		
		/**
		 * 舞台视图 
		 */		
		public var stageView:StageView;
		
		/**
		 * 脚本视图 
		 */		
		public var actionView:ActionView;
		
		/**
		 * 角色视图 
		 */		
		public var roleView:RoleView;
		
	}
}