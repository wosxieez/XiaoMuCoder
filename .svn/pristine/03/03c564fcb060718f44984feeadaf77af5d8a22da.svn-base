package com.xiaomu.view.actionview
{
	import com.xiaomu.hook.DownHook;
	import com.xiaomu.hook.HookComponent;
	import com.xiaomu.hook.HookEvent;
	import com.xiaomu.hook.UpHook;
	
	public class TestHookComponent extends HookComponent
	{
		public function TestHookComponent()
		{
			super();
		}
		
		override protected function createChildren():void
		{
			super.createChildren();
			
			upHook = new UpHook();
			upHook.hookComponent = this;
			upHook.addEventListener(HookEvent.MATCH_CHANGED, matchedHandler);
			upHook.addEventListener(HookEvent.TARGET_CHANGED, targetChangedHandler);
			
			downHook = new DownHook();
			downHook.hookComponent = this;
			downHook.x = downHook.y = 50;
			downHook.addEventListener(HookEvent.MATCH_CHANGED, matchedHandler);
			downHook.addEventListener(HookEvent.TARGET_CHANGED, targetChangedHandler);
		}
		
		protected function targetChangedHandler(event:HookEvent):void
		{
			invalidateSkin();
		}
		
		protected function matchedHandler(event:HookEvent):void
		{
			invalidateSkin();
		}
		
		override protected function drawSkin():void
		{
			graphics.clear();
			graphics.beginFill(0x6C6C6C);
			graphics.drawRect(0, 0, width, height);
			graphics.endFill();
			
			if (upHook)
			{
				graphics.beginFill(upHook.matchHook ? 0x00FF00 : 0xFF0000);
				graphics.drawCircle(upHook.x, upHook.y, 5);
				graphics.endFill();
			}
			
			if (downHook)
			{
				graphics.beginFill(downHook.matchHook ? 0x00FF00 : 0x0000FF);
				graphics.drawCircle(downHook.x, downHook.y, 5);
				graphics.endFill();
			}
			
		}
		
	}
}